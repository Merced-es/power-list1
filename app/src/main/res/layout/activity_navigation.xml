<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  android:id="@+id/frameLayout"
  android:padding="4dp"
  tools:context=".controller.NavigationActivity">

<TextView
  android:id="@+id/title_second_fragment"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_margin="4dp"
  android:text="Power List"
  android:textSize="25sp"
  app:layout_constraintVertical_chainStyle="packed"
  app:layout_constraintTop_toTopOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintBottom_toTopOf="@id/goals_fragment"/>
<Button
  android:id="@+id/goals_fragment"
  android:layout_width="0dp"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  android:text="Goals"
  android:textSize="20sp"
  app:layout_constraintBottom_toTopOf="@id/power_list_fragment"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintTop_toBottomOf="@id/title_second_fragment"/>
<Button
  android:id="@+id/power_list_fragment"
  android:layout_width="0dp"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  android:text="Power Lists"
  android:textSize="20dp"
  app:layout_constraintBottom_toTopOf="@id/vision_board_fragment"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintTop_toBottomOf="@id/goals_fragment"/>
<Button
  android:id="@+id/vision_board_fragment"
  android:layout_width="0dp"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  android:text="Vision Board"
  android:textSize="20dp"
  app:layout_constraintBottom_toBottomOf="parent"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintTop_toBottomOf="@id/power_list_fragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>
